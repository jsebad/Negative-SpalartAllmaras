FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 4.767E-05;

boundaryField
{
    inlet
    {
        type            calculated;
        value           $internalField;
    }

    outlet
    {
        type            calculated;
        value           $internalField;
    }

    plate
    {
        type            nutLowReWallFunction;
        value           uniform 0;
    }

    "(sym_inlet|sym_outlet|sym_side_1|sym_side_2|top)"
    {
        type            symmetry;
    }

}

