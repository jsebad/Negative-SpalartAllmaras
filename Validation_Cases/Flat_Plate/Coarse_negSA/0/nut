FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 7.95e-5;

boundaryField
{
    inlet
    {
        type            calculated;
        value           $internalField;
    }

    outlet
    {
        type            calculated;
        value           $internalField;
    }

    plate
    {
        type            nutUWallFunction;
        value           uniform 0;
    }

    "(top|sym_bott)"
    {
        type            symmetry;
    }
    
    frontAndBack
    {
        type            empty;
    }
}

